{
  "solve": {
    "description": "Решает алгебраические уравнения",
    "usage": "solve <уравнение>",
    "examples": [
      "solve x**2 - 4 = 0",
      "реши x**2 + 2*x + 1 = 0",
      "найди x**3 - 8 = 0"
    ],
    "notes": "Поддерживает символьное и численное решение. Для сложных трансцендентных уравнений автоматически используется численный метод."
  },

  "derivative": {
    "description": "Вычисляет производную функции",
    "usage": "derivative <выражение> по <переменная>",
    "examples": [
      "derivative x**3 + 2*x**2 по x",
      "производная sin(x) * cos(x) по x",
      "дифференцируй x**2 + y**2 по x"
    ],
    "notes": "Если переменная не указана, используется автоопределение для выражений с одной переменной."
  },

  "integrate": {
    "description": "Вычисляет неопределённый интеграл",
    "usage": "integrate <выражение> по <переменная>",
    "examples": [
      "integrate x**2 по x",
      "интеграл sin(x) по x",
      "проинтегрируй 1/x по x"
    ],
    "notes": "Возвращает антипроизводную без константы интегрирования."
  },

  "limit": {
    "description": "Вычисляет предел функции",
    "usage": "limit <выражение> по <переменная> в <точка>",
    "examples": [
      "limit sin(x)/x по x в 0",
      "предел (x**2 - 1)/(x - 1) по x в 1"
    ],
    "notes": "Для бесконечности используйте 'oo' (два нуля)."
  },

  "simplify": {
    "description": "Упрощает математическое выражение",
    "usage": "simplify <выражение>",
    "examples": [
      "simplify (x**2 - 1)/(x - 1)",
      "упрости sin(x)**2 + cos(x)**2",
      "приведи sqrt(x**2)"
    ],
    "notes": "Применяет различные методы упрощения автоматически."
  },

  "expand": {
    "description": "Раскрывает скобки в выражении",
    "usage": "expand <выражение>",
    "examples": [
      "expand (x + 1)**3",
      "раскрой (x + y)**2",
      "разложи (x - 2)*(x + 3)"
    ]
  },

  "factor": {
    "description": "Раскладывает выражение на множители",
    "usage": "factor <выражение>",
    "examples": [
      "factor x**2 - 4",
      "факторизуй x**3 - 8",
      "разложи на множители x**2 + 5*x + 6"
    ]
  },

  "collect": {
    "description": "Группирует члены по указанной переменной",
    "usage": "collect <выражение> по <переменная>",
    "examples": [
      "collect x**2 + 2*x + x*y по x",
      "собери x*y + x**2 + y по x"
    ]
  },

  "trigsimp": {
    "description": "Упрощает тригонометрические выражения",
    "usage": "trigsimp <выражение>",
    "examples": [
      "trigsimp sin(x)**2 + cos(x)**2",
      "упрости тригонометрию sin(2*x)"
    ]
  },

  "expand_trig": {
    "description": "Раскрывает тригонометрические формулы",
    "usage": "expand_trig <выражение>",
    "examples": [
      "expand_trig sin(x + y)",
      "раскрой тригонометрию cos(2*x)"
    ]
  },

  "gcd": {
    "description": "Находит наибольший общий делитель",
    "usage": "gcd <число1>, <число2>, ...",
    "examples": [
      "gcd 12, 18",
      "НОД 24, 36, 48",
      "gcd x**2, x**3"
    ]
  },

  "lcm": {
    "description": "Находит наименьшее общее кратное",
    "usage": "lcm <число1>, <число2>, ...",
    "examples": [
      "lcm 12, 18",
      "НОК 4, 6, 8"
    ]
  },

  "degree": {
    "description": "Находит степень многочлена",
    "usage": "degree <многочлен> по <переменная>",
    "examples": [
      "degree x**3 + 2*x**2 + x по x",
      "степень x**2*y + x*y**2 по x"
    ]
  },

  "series": {
    "description": "Разлагает функцию в ряд Тейлора",
    "usage": "series <выражение> по <переменная>",
    "examples": [
      "series sin(x) по x",
      "ряд exp(x) по x"
    ],
    "notes": "По умолчанию разложение до 6-го порядка в точке 0."
  }
}